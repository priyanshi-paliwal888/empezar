<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipping_line_confirmation_wizard" model="ir.ui.view">
        <field name="name">shipping.line.confirmation.wizard.form</field>
        <field name="model">shipping.line.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Sending to Shipping Line">    
                <div>
                    WESTIM has already been sent for this estimates 
                    record. WESTIM will be overwritten and sent to the
                    shipping line upon clicking "Confirm"
                </div>
                <footer>
                    <button string="Yes, Confirm" type="object" name="action_confirm_send_to_shipping_line" class="btn-primary"/>
                    <button string="Cancel" type="object" name="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>